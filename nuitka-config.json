{
  "common": {
    "flags": [
      "--enable-plugin=tk-inter",
      "--include-package=flask",
      "--include-package=tinydb",
      "--include-data-dir=static=static",
      "--include-data-dir=templates=templates",
      "--output-dir=dist"
    ],
    "main_script": "Bihar-Police-Notebook.py"
  },
  "macos": {
    "flags": [
      "--macos-create-app-bundle",
      "--macos-app-icon=static/images/logo.icns"
    ],
    "description": "macOS .app bundle"
  },
  "windows": {
    "flags": [
      "--standalone",
      "--onefile",
      "--windows-icon-from-ico=static/images/logo.ico",
      "--windows-console-mode=disable",
      "--assume-yes-for-downloads"
    ],
    "description": "Windows standalone executable with all dependencies"
  }
}
